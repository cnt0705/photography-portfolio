{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["src/*"],
      "types/*": ["types/*"]
    },
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "public"]
}
