{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "commonjs",
    "noEmit": true,
    "paths": {
      "*": ["src/*"],
      "types/*": ["types/*"]
    },
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "public", ".cache"]
}
