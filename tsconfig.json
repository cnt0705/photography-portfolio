{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["src/*"],
      "types/*": ["types/*"]
    },
    "strict": true,
    "target": "esnext"
  },
  "include": ["./src/**/*", "./configs/**/*", "./types/**/*"]
}
